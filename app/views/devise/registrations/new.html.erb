<main class="main-content  mt-0">
  <section>
    <div class="page-header min-vh-100">
      <div class="container">
        <div class="row">
          <div class="col-6 d-lg-flex d-none h-100 my-auto pe-0 position-absolute top-0 start-0 text-center justify-content-center flex-column">
            <%= image_tag 'illustrations/illustration-signup.jpg', :class => "position-relative bg-gradient-primary h-100 m-3 border-radius-lg d-flex flex-column justify-content-center" %>
          </div>
          <div class="col-xl-4 col-lg-5 col-md-7 d-flex flex-column ms-auto me-auto ms-lg-auto me-lg-5">
            <div class="card card-plain">
              <div class="card-header">
                <div class="brand-logo" style="padding: 15px 0;">
                  <%= image_tag 'spritle_logo.png' %>
                </div>
                <h4 class="font-weight-bolder">Sign Up</h4>
                <p class="mb-0">Enter your email and password to register</p>
              </div>
              <div class="card-body">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="input-group input-group-outline my-3">
                    <%= f.label :name, class: "form-label" %>
                    <%= f.text_field :name, autocomplete: "name", class: "form-control", required: true %>
                  </div>

                  <div class="input-group input-group-outline mb-3">
                    <%= f.label :email, class: "form-label" %>
                    <%= f.email_field :email, autocomplete: "email", class: "form-control", required: true %>
                  </div>

                  <div class="input-group input-group-outline my-3">
                    <%= f.label :mobile, class: "form-label" %>
                    <%= f.text_field :mobile, autocomplete: "mobile", class: "form-control", required: true %>
                  </div>

                  <div class="input-group input-group-outline mb-3">
                    <%= f.label :password, class: "form-label" %>
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
                  </div>

                  <div class="input-group input-group-outline mb-3">
                    <%= f.label :password_confirmation, class: "form-label" %>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
                  </div>

                  <div class="actions">
                    <%= f.submit "Sign up", class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>
                  </div>
                <% end %>

                <%#= render "devise/shared/links" %>
              </div>
              <div class="card-footer text-center pt-0 px-lg-2 px-1">
                <p class="mb-2 text-sm mx-auto">
                  Already have an account?
                  <%= link_to  "Sign in", new_user_session_path, method: :get, :class => 'text-primary text-gradient font-weight-bold' %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>