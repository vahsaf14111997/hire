<%= form_with(model: question, local: true) do |f| %>
  <% if question.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% question.errors.full_messages.each do |message| %>
          <li style="list-style-type: none; margin-left: -2rem;">
            <span class="badge badge-sm bg-gradient-danger"><%= message %></span>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="input-group input-group-outline my-3">
    <%= f.label :question_text, class: "form-label" %>
    <%= f.text_field :question_text, autocomplete: "question_text", class: "form-control", required: true %>
  </div>
  
  <div class="input-group input-group-outline mb-3">
    <%= f.select :question_type, options_for_select({ "Choice" => "radiogroup" }, question.question_type), { prompt: "Select Type" }, { class: "form-select" } %>
  </div>

  <div class="input-group input-group-outline my-3">
    <%= f.label :options, class: "form-label" %>
    <%= f.text_field :options, autocomplete: "options", class: "form-control", required: true %>
  </div>

  <div class="input-group input-group-outline mb-3">
    <%= f.label :correct_answer, class: "form-label" %>
    <%= f.text_field :correct_answer, autocomplete: "correct_answer", class: "form-control", required: true %>
  </div>

  <div class="input-group input-group-outline mb-3">
    <%= f.select :tag, options_for_select({ "Attention to Details" => "attention_to_details", "Critical Thinking" => "critical_thinking", "Numerical Reasoning" => "numerical_reasoning", "Verbal Reasoning" => "verbal_reasoning" }, question.tag), { prompt: "Select Tag" }, { class: "form-select" } %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>
  </div>
<% end %>
