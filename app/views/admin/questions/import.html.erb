<body class="g-sidenav-show  bg-gray-200">
  <%= render "/layouts/header" %>

  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <%= render "/shared/nav_bar" %>

    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <%= render "/shared/question_nav" %>

          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg pt-3 pb-2">
                <h6 class="text-white text-capitalize ps-3">Import Questions</h6>
              </div>
            </div>
            <div class="card-body px-12 pb-2">
              <%= form_with url: question_bulk_upload_path, local: true do |form| %>
                <div class="input-group input-group-outline my-3">
                  <%= form.file_field :file, class: "form-control", accept: ".xlsx", required: true %>
                </div>

                <div class="actions">
                  <%= form.submit "Import", class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <%= render "/layouts/footer" %>
    </div>
  </main>
</body>
