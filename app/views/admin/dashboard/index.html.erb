<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700" />
  <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/icon?family=Material+Icons+Round">
</head>

<body class="g-sidenav-show  bg-gray-200">
  <%= render "/layouts/header" %>

  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
      <div class="container-fluid py-1 px-3">
        <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
          <div class="ms-md-auto pe-md-3 d-flex align-items-center">
            <div class="input-group input-group-outline">
              <!--<label class="form-label">Type here...</label>
              <input type="text" class="form-control">-->
            </div>
          </div>
          <ul class="navbar-nav justify-content-end">
            <li class="nav-item d-flex align-items-center">
              <%= button_to destroy_user_session_path, method: :delete, class: "btn btn-danger font-weight-bold" do %>
                <i class="material-icons opacity-10">power_settings_new</i>
                <span class="d-sm-inline d-none">Logout</span>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->

    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card black-card">
            <div class="card-header p-3 pt-2">
              <div class="icon icon-lg icon-shape bg-gradient-dark shadow-dark text-center border-radius-xl mt-n4 position-absolute">
                <i class="material-icons opacity-10">weekend</i>
              </div>
              <div class="text-end pt-1">
                <p class="text-sm mb-0 text-capitalize">Test sent overall</p>
                <h4 class="mb-0"><%= @test_sent_overall %></h4>
              </div>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-footer p-3">
            </div>
          </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card pink-card">
            <div class="card-header p-3 pt-2">
              <div class="icon icon-lg icon-shape bg-gradient-primary shadow-primary text-center border-radius-xl mt-n4 position-absolute">
                <i class="material-icons opacity-10">person</i>
              </div>
              <div class="text-end pt-1">
                <p class="text-sm mb-0 text-capitalize">Test took overall</p>
                <h4 class="mb-0"><%= @test_took_overall %></h4>
              </div>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-footer p-3">
            </div>
          </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card green-card">
            <div class="card-header p-3 pt-2">
              <div class="icon icon-lg icon-shape bg-gradient-success shadow-success text-center border-radius-xl mt-n4 position-absolute">
                <i class="material-icons opacity-10">person</i>
              </div>
              <div class="text-end pt-1">
                <p class="text-sm mb-0 text-capitalize">Test sent today</p>
                <h4 class="mb-0"><%= @test_sent_today %></h4>
              </div>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-footer p-3">
            </div>
          </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card blue-card">
            <div class="card-header p-3 pt-2">
              <div class="icon icon-lg icon-shape bg-gradient-info shadow-info text-center border-radius-xl mt-n4 position-absolute">
                <i class="material-icons opacity-10">weekend</i>
              </div>
              <div class="text-end pt-1">
                <p class="text-sm mb-0 text-capitalize">Test took today</p>
                <h4 class="mb-0"><%= @test_took_today %></h4>
              </div>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-footer p-3">
            </div>
          </div>
        </div>
      </div>

      <div class="row mt-4">
      </div>

      <div class="row mb-4">
        <div class="col-lg-9 col-md-6 mb-md-0 mb-4">
          <div class="card">
            <div class="card-header pb-0">
              <div class="row">
                <div class="col-lg-6 col-7">
                  <h6>Recent Candidates</h6>
                </div>
              </div>
            </div>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Email</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Status</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Joined At</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if @recent_users.length == 0 %>
                      <td class="align-middle" colspan="4">
                        <p class="text-xs font-weight-bold mb-0 text-center">No data available</p>
                      </td>
                    <% end %>

                    <% @recent_users.each do |recent_user| %>
                      <tr>
                        <td class="align-middle">
                          <span class="text-xs font-weight-bold px-3"> <%= recent_user.name %> </span>
                        </td>
                        <td class="align-middle">
                          <span class="text-xs font-weight-bold"> <%= recent_user.email %> </span>
                        </td>
                        <td class="align-middle">
                          <% if recent_user.present? && recent_user.status == "test_sent" %><span class="badge badge-sm bg-gradient-primary">Test Sent</span><% end %>
                          <% if recent_user.present? && recent_user.status == "test_taken" %><span class="badge badge-sm bg-gradient-info">Test Taken</span><% end %>
                          <% if recent_user.present? && recent_user.status == "test_not_taken" %><span class="badge badge-sm bg-gradient-secondary">Test Not Taken</span><% end %>

                          <% if recent_user.present? && recent_user.status == "on_hold" %><span class="badge badge-sm bg-gradient-warning">On hold</span><% end %>
                          <% if recent_user.present? && recent_user.status == "selected" %><span class="badge badge-sm bg-gradient-success">Selected</span><% end %>
                          <% if recent_user.present? && recent_user.status == "rejected" %><span class="badge badge-sm bg-gradient-danger">Rejected</span><% end %>
                        </td>
                        <td class="align-middle">
                          <span class="text-xs font-weight-bold"> <%= format_timestamp(recent_user.created_at) %> </span>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-md-0 mb-4">
          <div class="card h-100">
            <div class="card-header pb-0">
              <h6>Test overview</h6>
            </div>
            <% if @recent_tests.length == 0 %>
              <td class="align-middle" colspan="4">
                <p class="text-xs font-weight-bold mb-0 text-center">No data available</p>
              </td>
            <% end %>

            <% @recent_tests.each do |recent_test| %>
              <div class="card-body p-3 test-overview">
                <div class="timeline timeline-one-side">
                  <div class="timeline-block mb-3">
                    <span class="timeline-step">
                      <i class="material-icons text-success text-gradient">info</i>
                    </span>
                    <div class="timeline-content">
                      <h6 class="text-dark text-sm font-weight-bold mb-0">Test response submitted by <%= recent_test.user.name %> and took <%= recent_test.percentage.to_i %>%</h6>
                      <p class="text-secondary font-weight-bold text-xs mt-1 mb-0"><%= format_timestamp(recent_test.updated_at) %></p>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <%= render "/layouts/footer" %>
    </div>
  </main>

  <script>
    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
      var options = {
        damping: '0.5'
      }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
  </script>

  <!-- Github buttons -->
  <script async defer src="https://buttons.github.io/buttons.js"></script>
</body>

</html>
