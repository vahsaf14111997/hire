<%= form_with(model: user, local: true) do |f| %>

  <% if action_name == "new" || action_name == "create" %>
    <%= f.hidden_field :password, value: "spritle123" %>
  <% end %>

  <% if user.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li style="list-style-type: none; margin-left: -2rem;">
            <span class="badge badge-sm bg-gradient-danger"><%= message %></span>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="input-group input-group-outline my-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, autocomplete: "name", class: "form-control", required: true %>
  </div>
  
  <div class="input-group input-group-outline mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autocomplete: "email", class: "form-control", required: true %>
  </div>

  <div class="input-group input-group-outline my-3">
    <%= f.label :mobile, class: "form-label" %>
    <%= f.text_field :mobile, autocomplete: "mobile", class: "form-control" %>
  </div>

  <% if action_name == "edit" || action_name == "update" %>
    <div class="input-group input-group-outline mb-3">
      <%= f.select :status, options_for_select({ "Test Taken" => "test_taken", "Test Sent" => "test_sent", "Test Not Taken" => "test_not_taken", "On hold" => "on_hold", "Selected" => "selected", "Rejected" => "rejected" }, user.status), { prompt: "Select Status" }, { class: "form-select" } %>
    </div>

    <div class="input-group input-group-outline mb-3">
      <%= f.check_box :took_test, class: "form-check-input" %>
      <%= f.label :took_test, class: "form-check-label" %>?
    </div>

    <div class="actions">
      <%= f.submit "Update Candidate", class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>
    </div>
  <% else %>
    <div class="actions">
      <%= f.submit "Create & Send Test", class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>
    </div>
  <% end %>
<% end %>
